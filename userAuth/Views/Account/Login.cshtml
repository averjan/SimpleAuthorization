@model userAuth.ViewModels.LoginViewModel

<h2>Sign In</h2>
<form method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl" class="w-50">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" class="form-control"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="RememberMe"></label><br />
        <input class="align-self-center" style="width: 20px; height: 20px" asp-for="RememberMe"/><br />
    </div>
    <div>
        <input class="btn-lg btn-block btn-primary my-2" type="submit" value="Sign In" />
    </div>
</form>
<form method="get" class="w-100 h-100" asp-area="">
    <div class="w-50 d-flex align-items-center justify-content-center align-self-center btn-group-vertical">
        <button class="btn-lg btn-block btn-primary my-2" asp-controller="Account" asp-action="Register">Sign Up</button>
    </div>
</form>